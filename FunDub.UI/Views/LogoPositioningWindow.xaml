<Window x:Class="FunDub.UI.Views.LogoPositioningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        Background="Transparent" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" Closed="Window_Closed">

    <Grid>
        <Image x:Name="VideoPreviewImage" Stretch="Uniform"/>
        <Canvas x:Name="OverlayCanvas" Background="Transparent" MouseMove="OverlayCanvas_MouseMove" Panel.ZIndex="1">
            <Border x:Name="LogoImageBorder" Width="120" Height="120" Background="Black" MouseLeftButtonDown="LogoImageBorder_MouseLeftButtonDown" MouseLeftButtonUp="LogoImageBorder_MouseLeftButtonUp" />
            
            <StackPanel Canvas.Bottom="30" Canvas.Right="30" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Scale:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
                    <Slider x:Name="ScaleSlider" Minimum="0.1" Maximum="3" ValueChanged="ScaleSlider_ValueChanged" Width="100" Value="1"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="Opacity:" VerticalAlignment="Center"  Foreground="White" Margin="0,0,10,0"/>
                    <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" ValueChanged="OpacitySlider_ValueChanged" Width="100" Value="0.8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Change background" Click="UpdateBackgroundImage_Click" Style="{StaticResource ToolbarButtonStyle}" Width="140"/>
                <Button Content="CANCEL" Click="Cancel_Click" Style="{StaticResource ToolbarButtonStyle}" Width="80" Margin="30,0,10,0"/>
                <Button Content="APPLY" Click="Save_Click" Style="{StaticResource StartButtonStyle}" Width="100" />
                </StackPanel>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>